<div class="row-fluid">

  <div class="span12">

    <div class="box">

      <div class="box-title">
        <h3><i class="icon-table"></i> Ticket Listing</h3>
        <div class="box-tool">
        <a data-action="collapse" href="#"><i class="icon-chevron-up"></i></a>
        <a data-action="close" href="#"><i class="icon-remove"></i></a>
        </div>
      </div>

      <div class="box-content">

        <table class="table">
          <tr>
            <th>Status</th>
            <th>Sender</th>
            <th>Subject</th>
            <th>Body</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

        <% @tickets.each do |ticket| %>
          <tr>
            <td><%= ticket.status %></td>
            <td><%= ticket.sender %></td>
            <td><%= ticket.subject %></td>
            <td><%= truncate ticket.body, length: 50 %></td>
            <td><%= link_to 'Show', ticket %></td>
            <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
            <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </table>

      </div>

    </div>

  </div>

</div>

<br />

<%= link_to 'New Ticket', new_ticket_path %>
